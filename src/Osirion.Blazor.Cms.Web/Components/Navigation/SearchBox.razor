@namespace Osirion.Blazor.Cms.Web.Components

<div class="@GetWrapperClass()">
    @if (Title is not null)
    {
        <h2 class="osirion-search-title">@Title</h2>
    }
    <form class="@GetSearchBoxClass()" method="get" action="@ActionUrl" role="search">
        <label for="search-input-@GetHashCode()" class="visually-hidden">Search</label>
        <input id="search-input-@GetHashCode()"
               name="@QueryParameterName"
               value="@SearchQuery"
               type="search"
               placeholder="@Placeholder"
               class="osirion-search-input"
               aria-label="@Placeholder" />
        <button type="submit" class="@GetButtonClass()" aria-label="Submit search">
            <span aria-hidden="true">@SearchButtonText</span>
        </button>
    </form>
</div>