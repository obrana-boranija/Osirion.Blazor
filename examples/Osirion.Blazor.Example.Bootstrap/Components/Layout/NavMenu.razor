@using Osirion.Blazor.Cms.Components
@using Osirion.Blazor.Cms.Web.Components
@using Osirion.Blazor.Components
@using Osirion.Blazor.Navigation.Components
@inherits OsirionComponentBase

<Menu AriaLabel="Main Navigation"
      Orientation="MenuOrientation.Horizontal"
      Alignment="MenuAlignment.Right"
      CollapseOnMobile
      BrandLogo="/favicon.png"
      BrandText="Osirion.Blazor"
      Sticky>
    <MenuItem Text="Home" Href="/" Icon="home" />
    @foreach (var dir in _directories)
    {
        <MenuItem Text="@dir.Name" Href="@dir.Url" Icon="@dir.Name.ToLower()" />
    }

    <MenuDivider />
    <SearchBox Class="p-3" />
    <Osirion.Blazor.Theming.Components.ThemeToggle />
</Menu>