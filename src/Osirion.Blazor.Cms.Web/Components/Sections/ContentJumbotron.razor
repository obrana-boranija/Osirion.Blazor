@namespace Osirion.Blazor.Cms.Components
@inherits OsirionComponentBase

<div class="@GetContentViewClass()">
    <OsirionBackgroundPattern BackgroundPattern="@BackgroundPattern" />

    <div class="osirion-bg-content osirion-content-header">
        <div class="osirion-content-header-text @(TextEnhancement ? "osirion-bg-enhance-text" : "")">
            <h1>@Item?.Title</h1>
            <div class="osirion-content-meta">
                @if (!string.IsNullOrWhiteSpace(Item?.Description))
                {
                    <p class="osirion-content-summary">@Item.Description</p>
                }

                @if (!string.IsNullOrWhiteSpace(Item?.Author))
                {
                    <span class="osirion-content-author">
                        <svg class="osirion-content-meta-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        By @Item.Author
                    </span>
                }
                <span class="osirion-content-date">
                    <svg class="osirion-content-meta-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    @Item?.DateCreated.ToString("MMMM d, yyyy")
                </span>
                <span class="osirion-content-read-time">
                    <svg class="osirion-content-meta-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    @Item?.ReadTimeMinutes min read
                </span>
            </div>
        </div>

        <!-- Right column: Featured image -->
        @if (!string.IsNullOrWhiteSpace(Item?.FeaturedImageUrl))
        {
            <div class="osirion-content-image-container">
                <img src="@Item.FeaturedImageUrl" alt="@Item.Title" class="osirion-content-featured-image" width="600" height="315" />
            </div>
        }
    </div>
</div>
