@page "/counter"
@rendermode InteractiveAuto

<PageTitle>WebAssembly Counter</PageTitle>

<h1>WebAssembly Interactive Demo</h1>

<p>This page demonstrates Osirion.Blazor components in WebAssembly interactive mode.</p>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Interactive Counter</h5>
        <p role="status">Current count: @currentCount</p>
        <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
        <p class="mt-3 text-muted">
            This component will run on WebAssembly if available, otherwise it falls back to server-side interactivity.
        </p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Render Mode</h5>
        <p>Current mode: @(OperatingSystem.IsBrowser() ? "WebAssembly" : "Server")</p>
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}