@namespace Osirion.Blazor.Components
@inherits OsirionComponentBase

<section class="@GetHeroSectionClass()" style="@GetBackgroundStyle()" @attributes="@Attributes">

    @if (!UseBackgroundImage)
    {
        <OsirionBackgroundPattern BackgroundPattern="@BackgroundPattern" />
    }

    @if (UseBackgroundImage && !string.IsNullOrWhiteSpace(ImageUrl))
    {
        <div class="osirion-hero-overlay"></div>
    }

    <div class="osirion-hero-container">
        <div class="osirion-hero-grid">
            <!-- Content Column -->
            <div class="osirion-hero-content">
                <OsirionAnimation Show="@(Animate && (TitleContent is not null || !string.IsNullOrWhiteSpace(Title)))" Effect="AnimationEffect.FadeRight">
                    @if (TitleContent is not null)
                    {
                        @TitleContent
                    }
                    else if (!string.IsNullOrWhiteSpace(Title))
                    {
                        <h1 class="osirion-hero-title">@Title</h1>
                    }
                </OsirionAnimation>

                <OsirionAnimation Show="@(Animate && (SubtitleContent is not null || !string.IsNullOrWhiteSpace(Subtitle)))" Delay="200" Effect="AnimationEffect.FadeRight">
                    @if (SubtitleContent is not null)
                    {
                        @SubtitleContent
                    }
                    else if (!string.IsNullOrWhiteSpace(Subtitle))
                    {
                        <p class="osirion-hero-subtitle">@Subtitle</p>
                    }
                </OsirionAnimation>

                <OsirionAnimation Show="@(Animate && (SummaryContent is not null || !string.IsNullOrWhiteSpace(Summary)))" Delay="400" Effect="AnimationEffect.FadeRight">
                    @if (SummaryContent is not null)
                    {
                        @SummaryContent
                    }
                    else if (!string.IsNullOrWhiteSpace(Summary))
                    {
                        <p class="osirion-hero-summary">@Summary</p>
                    }
                </OsirionAnimation>



                @if (ShowMetadata)
                {
                    <OsirionAnimation Show="@(Animate)" Delay="600" Effect="AnimationEffect.FadeRight">
                        <OsirionArticleMetdata Author="@Author" PublishDate="PublishDate" ReadTime="@ReadTime" />
                    </OsirionAnimation>
                }

                @if (HasButtons)
                {
                    <OsirionAnimation Show="@(Animate)" Delay="800" Effect="AnimationEffect.FadeRight">
                        <div class="osirion-hero-buttons">
                            @if (ShowPrimaryButton && !string.IsNullOrWhiteSpace(PrimaryButtonText) && !string.IsNullOrWhiteSpace(PrimaryButtonUrl))
                            {
                                <a href="@PrimaryButtonUrl" class="@BuildButtonClass(ButtonVariant.Primary, ButtonSize.Large) osirion-hero-button osirion-hero-button-primary">
                                    @PrimaryButtonText
                                </a>
                            }

                            @if (ShowSecondaryButton && !string.IsNullOrWhiteSpace(SecondaryButtonText) && !string.IsNullOrWhiteSpace(SecondaryButtonUrl))
                            {
                                <a href="@SecondaryButtonUrl" class="@BuildButtonClass(ButtonVariant.OutlinedPrimary, ButtonSize.Large) osirion-hero-button osirion-hero-button-primary">
                                    @SecondaryButtonText
                                </a>
                            }
                        </div>
                    </OsirionAnimation>
                }

                @if (ChildContent is not null)
                {
                    <OsirionAnimation Show="@(Animate)" Delay="100" Effect="AnimationEffect.FadeRight">
                        <div class="osirion-hero-additional">
                            @ChildContent
                        </div>
                    </OsirionAnimation>
                }
            </div>

            <!-- Side Image Column (when not using background) -->
            @if (!UseBackgroundImage && !string.IsNullOrWhiteSpace(ImageUrl))
            {
                <OsirionAnimation Show="@(Animate)" Delay="500" Effect="AnimationEffect.FadeLeft">
                    <div class="osirion-hero-image-container">
                        <img src="@ImageUrl"
                             alt="@(ImageAlt ?? Title ?? "Hero image")"
                             class="osirion-hero-featured-image"
                             width="@GetImageSize().Width"
                             height="@GetImageSize().Heigth" />
                    </div>
                </OsirionAnimation>
            }
        </div>
    </div>
</section>