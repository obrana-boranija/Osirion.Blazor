@namespace Osirion.Blazor.Cms.Admin.Features.Repository.Components
@using Osirion.Blazor.Cms.Admin.Features.Repository.ViewModels
@inherits Osirion.Blazor.Cms.Admin.Shared.Components.BaseComponent
@inject RepositorySelectorViewModel ViewModel
@inject NavigationManager NavigationManager

<div class="repository-selector @CssClass">
    <div class="repository-header">
        <h2 class="repository-title">@Title</h2>

        <div class="repository-actions">
            <button type="button"
                    class="repository-button repository-button-refresh"
                    title="Refresh repositories"
                    @onclick="RefreshRepositories">
                <span class="repository-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 12a9 9 0 0 1-9 9c-4.97 0-9-4.03-9-9s4.03-9 9-9c2.39 0 4.68.94 6.4 2.6L12 12" />
                    </svg>
                </span>
            </button>
        </div>
    </div>

    @if (ViewModel.IsLoading)
    {
        <div class="repository-loading">
            <span class="repository-loading-spinner"></span>
            <span>Loading repositories...</span>
        </div>
    }
    else if (ViewModel.ErrorMessage != null)
    {
        <div class="repository-error">
            <span class="repository-error-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10" />
                    <line x1="12" y1="8" x2="12" y2="12" />
                    <line x1="12" y1="16" x2="12.01" y2="16" />
                </svg>
            </span>
            <span>@ViewModel.ErrorMessage</span>
            <button type="button" class="repository-button repository-button-small" @onclick="RefreshRepositories">
                Retry
            </button>
        </div>
    }
    else if (ViewModel.Repositories.Count == 0)
    {
        <div class="repository-empty">
            <span>No repositories found.</span>
            <button type="button" class="repository-button repository-button-small" @onclick="RefreshRepositories">
                Refresh
            </button>
        </div>
    }
    else
    {
        <div class="repository-select-container">
            <select class="repository-select"
                    value="@SelectedRepositoryName"
                    @onchange="OnRepositorySelected">
                <option value="">@SelectPrompt</option>
                @foreach (var repo in ViewModel.Repositories)
                {
                    <option value="@repo.Name">@repo.Name</option>
                }
            </select>
        </div>

        @if (ViewModel.SelectedRepository != null)
        {
            <div class="repository-details">
                <div class="repository-info">
                    <span class="repository-name">@ViewModel.SelectedRepository.Name</span>
                    @if (!string.IsNullOrEmpty(ViewModel.SelectedRepository.Description))
                    {
                        <span class="repository-description">@ViewModel.SelectedRepository.Description</span>
                    }
                    <span class="repository-visibility">
                        @if (ViewModel.SelectedRepository.Private)
                        {
                            <span class="repository-private">Private</span>
                        }
                        else
                        {
                            <span class="repository-public">Public</span>
                        }
                    </span>
                </div>

                <button type="button"
                        class="repository-button repository-button-link"
                        @onclick="OpenRepositoryLink"
                        title="Open repository in GitHub">
                    <span class="repository-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                            <polyline points="15 3 21 3 21 9" />
                            <line x1="10" y1="14" x2="21" y2="3" />
                        </svg>
                    </span>
                    View on GitHub
                </button>
            </div>
        }
    }
</div>