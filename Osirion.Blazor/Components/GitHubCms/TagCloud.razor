@inject IGitHubCmsService CmsService
@using Osirion.Blazor.Services.GitHub
@using Osirion.Blazor.Models.Cms

<div class="tag-cloud">
    @if (IsLoading)
    {
        <div class="loading">Loading tags...</div>
    }
    else if (Tags.Count == 0)
    {
        <div class="no-tags">No tags available.</div>
    }
    else
    {
        <div class="tags-container">
            @foreach (var tag in Tags)
            {
                <a href="/tag/@tag.SlugUrl" class="tag-link">
                    @tag.Name
                    <span class="count">@tag.ContentCount</span>
                </a>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public int MaxTags { get; set; } = 20;

    private bool IsLoading { get; set; } = true;
    private List<ContentTag> Tags { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadTagsAsync();
    }

    private async Task LoadTagsAsync()
    {
        IsLoading = true;
        try
        {
            var allTags = await CmsService.GetTagsAsync();
            Tags = allTags.OrderByDescending(t => t.ContentCount).Take(MaxTags).ToList();
        }
        catch (Exception ex)
        {
            // Log error
            Console.Error.WriteLine($"Error loading tags: {ex.Message}");
            Tags = new List<ContentTag>();
        }
        finally
        {
            IsLoading = false;
        }
    }
}