@page "/"
@page "/{locale}"
@using Osirion.Blazor.Cms.Components
@using Osirion.Blazor.Components

<HomePage Content="Content"
          HeroTheme="ThemeMode.Dark"
          HeroAlignment="Alignment.Center"
          HeroPrimaryButtonText="Get Started"
          HeroVariant="HeroVariant.Jumbotron"
          HeroPrimaryButtonUrl="docs"
          HeroSecondaryButtonText="Star on GitHub"
          HeroSecondaryButtonUrl="https://github.com/obrana-boranija/Osirion.Blazor"
          ShowCategories="false"
          ShowTags="false" />

<OsirionBaseSection Id="testimonials-section" Title="What Our Customers Say" Description="Don't just take our word for it - hear from companies who've transformed their operations">
    <OsirionTestimonialCarousel CardVariant="TestimonialVariant.Compact"
                                CardSize="TestimonialSize.Normal"
                                AnimationDuration="45"
                                Speed="CarouselSpeed.Slow"
                                Theme="ThemeMode.System"
                                ShowRating="true"
                                InheritTheme="false"
                                PauseOnHover="true" />
</OsirionBaseSection>