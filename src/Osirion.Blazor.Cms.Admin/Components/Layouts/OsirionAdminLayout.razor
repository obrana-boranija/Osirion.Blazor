@inherits LayoutComponentBase
@implements IDisposable

<div class="@GetLayoutClass()">
    <header class="osirion-admin-header">
        <div class="osirion-admin-header-container">
            <div class="osirion-admin-header-left">
                <div class="osirion-admin-logo">
                    <a href="/osirion" class="osirion-admin-logo-link">
                        <svg class="osirion-admin-logo-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                            <polyline points="9 22 9 12 15 12 15 22" />
                        </svg>
                        <span class="osirion-admin-logo-text">Osirion CMS</span>
                    </a>
                </div>

                    <nav class="osirion-admin-top-nav">
                        <a href="/osirion" class="osirion-admin-nav-link @(NavigationManager.Uri.EndsWith("/osirion") ? "active" : "")">Dashboard</a>
                        <a href="/osirion/content" class="osirion-admin-nav-link @(NavigationManager.Uri.Contains("/osirion/content") ? "active" : "")">Content</a>
                        <a href="/osirion/settings" class="osirion-admin-nav-link @(NavigationManager.Uri.Contains("/osirion/settings") ? "active" : "")">Settings</a>
                    </nav>
            </div>

            <div class="osirion-admin-header-right">
@*                 <button type="button" class="osirion-admin-theme-toggle" @onclick="ToggleTheme" title="Toggle theme">
                    @if (Theme == "light")
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
                        </svg>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="5" />
                            <line x1="12" y1="1" x2="12" y2="3" />
                            <line x1="12" y1="21" x2="12" y2="23" />
                            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" />
                            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" />
                            <line x1="1" y1="12" x2="3" y2="12" />
                            <line x1="21" y1="12" x2="23" y2="12" />
                            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" />
                            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" />
                        </svg>
                    }
                </button> *@

                <div class="osirion-admin-user-menu">
                    <button type="button" class="osirion-admin-user-button" @onclick="ToggleMenu">
                        <span class="osirion-admin-avatar">
                            @if (AuthService.IsAuthenticated && !string.IsNullOrEmpty(AuthService.Username))
                            {
                                <span>@(AuthService.Username?.Substring(0, 1).ToUpper())</span>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                    <circle cx="12" cy="7" r="4" />
                                </svg>
                            }
                        </span>
                    </button>

                    @if (IsMenuOpen)
                    {
                        <div class="osirion-admin-dropdown-menu">
                            @if (AuthService.IsAuthenticated)
                            {
                                <div class="osirion-admin-dropdown-header">
                                    <span>Signed in as</span>
                                    <strong>@AuthService.Username</strong>
                                </div>
                                <div class="osirion-admin-dropdown-divider"></div>
                                <a href="/osirion/settings/profile" class="osirion-admin-dropdown-item">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                        <circle cx="12" cy="7" r="4" />
                                    </svg>
                                    <span>Profile</span>
                                </a>
                                <a href="/osirion/settings" class="osirion-admin-dropdown-item">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="3" />
                                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z" />
                                    </svg>
                                    <span>Settings</span>
                                </a>
                                <div class="osirion-admin-dropdown-divider"></div>
                                <button type="button" class="osirion-admin-dropdown-item" @onclick="SignOut">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                                        <polyline points="16 17 21 12 16 7" />
                                        <line x1="21" y1="12" x2="9" y2="12" />
                                    </svg>
                                    <span>Sign out</span>
                                </button>
                            }
                            else
                            {
                                <a href="/osirion/login" class="osirion-admin-dropdown-item">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" />
                                        <polyline points="10 17 15 12 10 7" />
                                        <line x1="15" y1="12" x2="3" y2="12" />
                                    </svg>
                                    <span>Sign in</span>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </header>

    <main class="osirion-admin-main">
        @if (AdminState.StatusMessage != null)
        {
            <div class="osirion-admin-alert osirion-admin-alert-success">
                <div class="osirion-admin-alert-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                        <polyline points="22 4 12 14.01 9 11.01" />
                    </svg>
                </div>
                <div class="osirion-admin-alert-content">
                    <p>@AdminState.StatusMessage</p>
                </div>
                <button type="button" class="osirion-admin-alert-close" @onclick="() => AdminState.ClearMessages()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (AdminState.ErrorMessage != null)
        {
            <div class="osirion-admin-alert osirion-admin-alert-error">
                <div class="osirion-admin-alert-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10" />
                        <line x1="12" y1="8" x2="12" y2="12" />
                        <line x1="12" y1="16" x2="12.01" y2="16" />
                    </svg>
                </div>
                <div class="osirion-admin-alert-content">
                    <p>@AdminState.ErrorMessage</p>
                </div>
                <button type="button" class="osirion-admin-alert-close" @onclick="() => AdminState.ClearMessages()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="osirion-admin-content">
            @Body
        </div>
    </main>

    <footer class="osirion-admin-footer">
        <div class="osirion-admin-footer-container">
            <div class="osirion-admin-footer-copyright">
                <span>&copy; @DateTime.Now.Year Osirion CMS. All rights reserved.</span>
            </div>
            <div class="osirion-admin-footer-links">
                <a href="https://github.com/obrana-boranija/Osirion.Blazor" target="_blank" class="osirion-admin-footer-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                    </svg>
                    <span>GitHub</span>
                </a>
                <a href="https://www.nuget.org/packages/Osirion.Blazor/" target="_blank" class="osirion-admin-footer-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z" />
                        <line x1="16" y1="8" x2="2" y2="22" />
                        <line x1="17.5" y1="15" x2="9" y2="15" />
                    </svg>
                    <span>Nuget</span>
                </a>
                <a href="https://docs.osirion.io" target="_blank" class="osirion-admin-footer-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                        <polyline points="14 2 14 8 20 8" />
                        <line x1="16" y1="13" x2="8" y2="13" />
                        <line x1="16" y1="17" x2="8" y2="17" />
                        <polyline points="10 9 9 9 8 9" />
                    </svg>
                    <span>Documentation</span>
                </a>
            </div>
        </div>
    </footer>
</div>