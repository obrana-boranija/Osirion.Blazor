@namespace Osirion.Blazor.Cms.Components
@inherits OsirionComponentBase

<section class="@GetHeroSectionClass()" style="@GetBackgroundStyle()">
    <div class="osirion-hero-overlay"></div>
    <div class="osirion-hero-container">
        <div class="osirion-hero-content">
            @if (!string.IsNullOrWhiteSpace(Title))
            {
                <h1 class="osirion-hero-title">@Title</h1>
            }

            @if (!string.IsNullOrWhiteSpace(Subtitle))
            {
                <p class="osirion-hero-subtitle">@Subtitle</p>
            }

            @if (ShowButtons)
            {
                <div class="osirion-hero-buttons">
                    @if (!string.IsNullOrWhiteSpace(PrimaryButtonText) && !string.IsNullOrWhiteSpace(PrimaryButtonUrl))
                    {
                        <button onclick="window.location.href='@PrimaryButtonUrl';" class="@BuildButtonClass(ButtonVariant.Primary, ButtonSize.Large)">@PrimaryButtonText</button>
                    }

                    @if (!string.IsNullOrWhiteSpace(SecondaryButtonText) && !string.IsNullOrWhiteSpace(SecondaryButtonUrl))
                    {
                        <button onclick="window.location.href='@SecondaryButtonUrl';" class="@BuildButtonClass(ButtonVariant.OutlinedSecondary, ButtonSize.Large)">@SecondaryButtonText</button>
                    }
                </div>
            }

            @if (ChildContent is not null)
            {
                <div class="osirion-hero-additional">
                    @ChildContent
                </div>
            }
        </div>

        <!-- Right column: Featured image -->
        @if (!BackgroundImage && !string.IsNullOrWhiteSpace(ImageUrl))
        {
            <div class="osirion-content-image-container">
                <img src="@ImageUrl" alt="@Title" class="osirion-content-featured-image" width="600" height="315" />
            </div>
        }
    </div>
</section>