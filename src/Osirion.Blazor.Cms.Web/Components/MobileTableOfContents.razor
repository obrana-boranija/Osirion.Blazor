@namespace Osirion.Blazor.Cms.Components
@inherits OsirionComponentBase

<div class="@GetMobileTocClass()">
    <div class="osirion-mobile-toc-header" @onclick="ToggleToc">
        <h3 class="osirion-mobile-toc-title">@Title</h3>
        <span class="osirion-mobile-toc-toggle">@(IsExpanded ? "−" : "+")</span>
    </div>

    @if (IsExpanded)
    {
        <div class="osirion-mobile-toc-content">
            <TableOfContents Content="@Content"
                             MinLevel="@MinLevel"
                             MaxLevel="@MaxLevel"
                             MaxDepth="@MaxDepth"
                             EmptyText="@EmptyText"
                             CssClass="osirion-mobile-toc-inner" />
        </div>
    }
</div>