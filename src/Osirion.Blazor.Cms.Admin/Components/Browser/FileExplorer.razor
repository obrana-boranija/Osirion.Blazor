@using Osirion.Blazor.Cms.Admin.Services
@using System.Text
@inherits Osirion.Blazor.Components.OsirionComponentBase

<div class="@GetFileExplorerClass()">
    <div class="osirion-admin-header">
        <h2 class="osirion-admin-title">@Title</h2>

        <div class="osirion-admin-actions">
            @if (CanCreateFile && IsValidRepositoryAndBranch)
            {
                <button type="button"
                        class="osirion-admin-button osirion-admin-button-create"
                        title="Create new file"
                        @onclick="CreateNewFile">
                    <span class="osirion-admin-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                            <polyline points="14 2 14 8 20 8" />
                            <line x1="12" y1="18" x2="12" y2="12" />
                            <line x1="9" y1="15" x2="15" y2="15" />
                        </svg>
                    </span>
                </button>
            }

            <button type="button"
                    class="osirion-admin-button osirion-admin-button-refresh"
                    title="Refresh contents"
                    @onclick="RefreshContents">
                <span class="osirion-admin-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 12a9 9 0 0 1-9 9c-4.97 0-9-4.03-9-9s4.03-9 9-9c2.39 0 4.68.94 6.4 2.6L12 12" />
                    </svg>
                </span>
            </button>
        </div>
    </div>

    @if (!IsValidRepositoryAndBranch)
    {
        <div class="osirion-admin-empty">
            <span>Please select a repository and branch first.</span>
        </div>
    }
    else if (IsLoading)
    {
        <div class="osirion-admin-loading">
            <span class="osirion-admin-loading-spinner"></span>
            <span>Loading contents...</span>
        </div>
    }
    else if (ErrorMessage != null)
    {
        <div class="osirion-admin-error">
            <span class="osirion-admin-error-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10" />
                    <line x1="12" y1="8" x2="12" y2="12" />
                    <line x1="12" y1="16" x2="12.01" y2="16" />
                </svg>
            </span>
            <span>@ErrorMessage</span>
            <button type="button" class="osirion-admin-button osirion-admin-button-small" @onclick="RefreshContents">
                Retry
            </button>
        </div>
    }
    else if (Contents.Count == 0)
    {
        <div class="osirion-admin-empty">
            <span>No files or directories found.</span>
            @if (CanCreateFile)
            {
                <button type="button" class="osirion-admin-button osirion-admin-button-primary" @onclick="CreateNewFile">
                    Create New File
                </button>
            }
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(CurrentPath))
        {
            <div class="osirion-admin-breadcrumb">
                <button type="button"
                        class="osirion-admin-breadcrumb-home"
                        @onclick="NavigateToRoot">
                    <span class="osirion-admin-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                            <polyline points="9 22 9 12 15 12 15 22" />
                        </svg>
                    </span>
                </button>

                @{
                    var pathParts = CurrentPath.Split('/');
                    var currentPathBuilder = new StringBuilder();
                }

                @for (var i = 0; i < pathParts.Length; i++)
                {
                    var part = pathParts[i];
                    currentPathBuilder.Append(part);
                    var path = currentPathBuilder.ToString();

                    <span class="osirion-admin-breadcrumb-separator">/</span>

                    @if (i == pathParts.Length - 1)
                    {
                        <span class="osirion-admin-breadcrumb-current">@part</span>
                    }
                    else
                    {
                        <button type="button"
                                class="osirion-admin-breadcrumb-item"
                                @onclick="() => NavigateToPath(path)">
                            @part
                        </button>
                    }

                    currentPathBuilder.Append('/');
                }
            </div>
        }

        <div class="osirion-admin-file-list">
            @foreach (var item in Contents.OrderByDescending(i => i.IsDirectory).ThenBy(i => i.Name))
            {
                <div class="osirion-admin-file-item @(IsItemSelected(item) ? "selected" : "")" @onclick="() => SelectItem(item)">
                    <div class="osirion-admin-file-icon">
                        @if (item.IsDirectory)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z" />
                            </svg>
                        }
                        else if (item.IsMarkdownFile)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                <polyline points="14 2 14 8 20 8" />
                                <line x1="16" y1="13" x2="8" y2="13" />
                                <line x1="16" y1="17" x2="8" y2="17" />
                                <polyline points="10 9 9 9 8 9" />
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                <polyline points="14 2 14 8 20 8" />
                            </svg>
                        }
                    </div>

                    <div class="osirion-admin-file-name">@item.Name</div>

                    <div class="osirion-admin-file-actions">
                        @if (item.IsMarkdownFile)
                        {
                            <button type="button"
                                    class="osirion-admin-button osirion-admin-button-icon"
                                    title="Edit file"
                                    @onclick="() => EditFile(item)"
                                    @onclick:stopPropagation="true">
                                <span class="osirion-admin-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z" />
                                    </svg>
                                </span>
                            </button>

                            @if (CanDeleteFile)
                            {
                                <button type="button"
                                        class="osirion-admin-button osirion-admin-button-icon osirion-admin-button-danger"
                                        title="Delete file"
                                        @onclick="() => ShowDeleteConfirmation(item)"
                                        @onclick:stopPropagation="true">
                                    <span class="osirion-admin-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="3 6 5 6 21 6" />
                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                        </svg>
                                    </span>
                                </button>
                            }
                        }
                    </div>
                </div>
            }
        </div>
    }

    @if (IsShowingDeleteConfirmation)
    {
        <div class="osirion-admin-modal">
            <div class="osirion-admin-modal-backdrop" @onclick="CancelDelete"></div>
            <div class="osirion-admin-modal-content">
                <div class="osirion-admin-modal-header">
                    <h3 class="osirion-admin-modal-title">Confirm Delete</h3>
                    <button type="button"
                            class="osirion-admin-button osirion-admin-button-icon"
                            @onclick="CancelDelete">
                        <span class="osirion-admin-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="18" y1="6" x2="6" y2="18" />
                                <line x1="6" y1="6" x2="18" y2="18" />
                            </svg>
                        </span>
                    </button>
                </div>

                <div class="osirion-admin-modal-body">
                    <p>Are you sure you want to delete <strong>@FileToDelete?.Name</strong>?</p>
                    <p>This action cannot be undone.</p>
                </div>

                <div class="osirion-admin-modal-footer">
                    <button type="button"
                            class="osirion-admin-button osirion-admin-button-secondary"
                            @onclick="CancelDelete">
                        Cancel
                    </button>

                    <button type="button"
                            class="osirion-admin-button osirion-admin-button-danger"
                            @onclick="ConfirmDeleteFile"
                            disabled="@IsDeletingFile">
                        @if (IsDeletingFile)
                        {
                            <span class="osirion-admin-loading-spinner"></span>
                            <span>Deleting...</span>
                        }
                        else
                        {
                            <span>Delete</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    }
</div>