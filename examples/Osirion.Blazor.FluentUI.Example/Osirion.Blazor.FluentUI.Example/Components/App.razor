@using Osirion.Blazor.Components.Navigation
<!DOCTYPE html>
<html lang="en">

<head>
    <FluentDesignTheme Mode="DesignThemeModes.Light" OfficeColor="OfficeColor.Excel" />
    

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["Osirion.Blazor.FluentUI.Example.styles.css"]" />

    <!-- Reference the Osirion CSS directly from the package -->
    <link rel="stylesheet" href="@Assets["_content/Osirion.Blazor/css/osirion.css"]" />

    <ImportMap />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    
    <script src="_framework/blazor.web.js"></script>
    <script>
        // Ensure Blazor doesn't interfere with our button
        window.addEventListener('load', function() {
            setTimeout(function() {
                var btn = document.getElementById('osirion-scroll-to-top');
                if (btn) {
                    // Remove any existing event listeners (in case they're broken)
                    var newBtn = btn.cloneNode(true);
                    btn.parentNode.replaceChild(newBtn, btn);

                    // Add our own handler to the new button
                    newBtn.addEventListener('click', function(e) {
                        console.log('New ScrollToTop button clicked');
                        window.scrollTo({ top: 0, left: 0, behavior: 'smooth' });
                        e.preventDefault();
                    });
                }
            }, 1500);
        });
    </script>
    <EnhancedNavigationInterceptor Behavior="ScrollBehavior.Smooth" />
    <ScrollToTopProvider />
</body>

</html>
