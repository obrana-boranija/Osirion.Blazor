@namespace Osirion.Blazor.Components
@inherits OsirionComponentBase
@using Osirion.Blazor.Core.Models

<div class="@GetContactInfoSectionClass() @Class" style="@Style" @attributes="Attributes">
    @if (!string.IsNullOrWhiteSpace(Title))
    {
        <h2 class="osirion-contact-info-title">@((MarkupString)Title)</h2>
    }

    @if (!string.IsNullOrWhiteSpace(ContactInfo?.Message))
    {
        <p class="osirion-contact-info-description">@((MarkupString)ContactInfo.Message)</p>
    }

    <div class="osirion-contact-info-list">
        @if (!string.IsNullOrWhiteSpace(ContactInfo?.Address))
        {
            <div class="osirion-contact-info-item">
                <div class="osirion-contact-info-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"></path>
                    </svg>
                </div>
                <div class="osirion-contact-info-content">
                    <span class="osirion-contact-info-label">@AddressLabel</span>
                    <span class="osirion-contact-info-value">@((MarkupString)ContactInfo.Address)</span>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ContactInfo?.Phone))
        {
            <div class="osirion-contact-info-item">
                <div class="osirion-contact-info-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"></path>
                    </svg>
                </div>
                <div class="osirion-contact-info-content">
                    <span class="osirion-contact-info-label">@PhoneLabel</span>
                    <a href="tel:@ContactInfo.Phone" class="osirion-contact-info-value osirion-contact-link">@((MarkupString)ContactInfo.Phone)</a>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ContactInfo?.Email))
        {
            <div class="osirion-contact-info-item">
                <div class="osirion-contact-info-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"></path>
                    </svg>
                </div>
                <div class="osirion-contact-info-content">
                    <span class="osirion-contact-info-label">@EmailLabel</span>
                    <a href="mailto:@ContactInfo.Email" class="osirion-contact-info-value osirion-contact-link">@((MarkupString)ContactInfo.Email)</a>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ContactInfo?.Website))
        {
            <div class="osirion-contact-info-item">
                <div class="osirion-contact-info-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"></path>
                    </svg>
                </div>
                <div class="osirion-contact-info-content">
                    <span class="osirion-contact-info-label">@WebsiteLabel</span>
                    <a href="@ContactInfo.Website" target="_blank" rel="noopener noreferrer" class="osirion-contact-info-value osirion-contact-link">@((MarkupString)GetWebsiteDisplayText())</a>
                </div>
            </div>
        }
    </div>
</div>