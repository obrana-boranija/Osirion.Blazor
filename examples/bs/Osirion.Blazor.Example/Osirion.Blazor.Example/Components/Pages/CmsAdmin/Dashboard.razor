@page "/admin"
@using Osirion.Blazor.Cms.Admin.Core.State
@using Osirion.Blazor.Cms.Admin.Features.ContentBrowser.Components
@using Osirion.Blazor.Cms.Admin.Features.Layouts.Components
@using Osirion.Blazor.Cms.Admin.Features.Layouts.Models
@using Osirion.Blazor.Cms.Admin.Features.Repository.Components
@using Osirion.Blazor.Components
@rendermode InteractiveServer
@inherits OsirionComponentBase

<PageTitle>Dashboard - Osirion CMS</PageTitle>

<AdminPage Title="Dashboard" Subtitle="Content Management System">
@*     <BreadcrumbItems>
        @(new BreadcrumbItem("Dashboard"))
    </BreadcrumbItems> *@

    <div class="osirion-admin-dashboard-page">
        <div class="osirion-admin-dashboard-header">
            <h1 class="osirion-admin-page-title">Welcome to Osirion CMS</h1>
            <p class="osirion-admin-page-description">Manage your content easily with Osirion's headless CMS solution.</p>
        </div>

        <div class="osirion-admin-dashboard-grid">
            <div class="osirion-admin-dashboard-sidebar">
                <div class="osirion-admin-card osirion-admin-repository-card">
                    <div class="osirion-admin-card-header">
                        <h2 class="osirion-admin-card-title">Repository Configuration</h2>
                    </div>
                    <div class="osirion-admin-card-body">
                        <RepositorySelector />
                        <BranchSelector AllowCreateBranch="true" />
                    </div>
                </div>

                <div class="osirion-admin-card osirion-admin-actions-card">
                    <div class="osirion-admin-card-header">
                        <h2 class="osirion-admin-card-title">Quick Actions</h2>
                    </div>
                    <div class="osirion-admin-card-body">
                        <div class="osirion-admin-quick-actions">
                            <button type="button"
                                    class="osirion-admin-action-button"
                                    @onclick="CreateNewPost"
                                    disabled="@(!IsRepositoryConfigured)">
                                <span class="osirion-admin-action-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                        <polyline points="14 2 14 8 20 8" />
                                        <line x1="12" y1="18" x2="12" y2="12" />
                                        <line x1="9" y1="15" x2="15" y2="15" />
                                    </svg>
                                </span>
                                <span class="osirion-admin-action-text">Create New Post</span>
                            </button>

                            <a href="/admin/content" class="osirion-admin-action-button">
                                <span class="osirion-admin-action-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                                        <polyline points="9 22 9 12 15 12 15 22" />
                                    </svg>
                                </span>
                                <span class="osirion-admin-action-text">Browse Content</span>
                            </a>

                            <a href="/admin/settings" class="osirion-admin-action-button">
                                <span class="osirion-admin-action-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="3" />
                                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z" />
                                    </svg>
                                </span>
                                <span class="osirion-admin-action-text">Settings</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="osirion-admin-dashboard-main">
                <div class="osirion-admin-card osirion-admin-content-card">
                    <div class="osirion-admin-card-header">
                        <h2 class="osirion-admin-card-title">Content Explorer</h2>
                    </div>
                    <div class="osirion-admin-card-body osirion-admin-content-browser">
                        <FileExplorer Title="Content Files" CanCreateFile="true" CanDeleteFile="true" />
                    </div>
                </div>
            </div>
        </div>

        @if (!IsRepositoryConfigured)
        {
            <div class="osirion-admin-help-notice">
                <div class="osirion-admin-help-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10" />
                        <path d="M12 16v-4" />
                        <path d="M12 8h.01" />
                    </svg>
                </div>
                <div class="osirion-admin-help-content">
                    <h3 class="osirion-admin-help-title">Getting Started</h3>
                    <p class="osirion-admin-help-text">
                        To begin working with content, please select a repository and branch from the sidebar.
                    </p>
                </div>
            </div>
        }
    </div>
</AdminPage>