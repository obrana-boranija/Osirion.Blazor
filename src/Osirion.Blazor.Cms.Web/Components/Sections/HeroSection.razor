@namespace Osirion.Blazor.Cms.Components
@inherits OsirionComponentBase

<section class="@GetHeroSectionClass()" style="@GetBackgroundStyle()">
    <div class="osirion-hero-overlay"></div>
    <div class="osirion-hero-container">
        <div class="osirion-hero-content">
            @if (!string.IsNullOrEmpty(Title))
            {
                <h1 class="osirion-hero-title">@Title</h1>
            }

            @if (!string.IsNullOrEmpty(Subtitle))
            {
                <p class="osirion-hero-subtitle">@Subtitle</p>
            }

            @if (ShowButtons && (!string.IsNullOrEmpty(PrimaryButtonText) || !string.IsNullOrEmpty(SecondaryButtonText)))
            {
                <div class="osirion-hero-buttons">
                    @if (!string.IsNullOrEmpty(PrimaryButtonText) && !string.IsNullOrEmpty(PrimaryButtonUrl))
                    {
                        <button onclick="window.location.href='@PrimaryButtonUrl';" class="@GetButtonClass()">@PrimaryButtonText</button>
                    }

                    @if (!string.IsNullOrEmpty(SecondaryButtonText) && !string.IsNullOrEmpty(SecondaryButtonUrl))
                    {
                        <button onclick="window.location.href='@SecondaryButtonUrl';" class="@GetButtonClass()">@SecondaryButtonText</button>
                    }
                </div>
            }

            @if (ChildContent != null)
            {
                <div class="osirion-hero-additional">
                    @ChildContent
                </div>
            }
        </div>
    </div>
</section>