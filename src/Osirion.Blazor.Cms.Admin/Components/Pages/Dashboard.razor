@page "/osirion"
@page "/osirion/dashboard"
@page "/osirion/content"
@rendermode InteractiveServer

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-2">Dashboard</h1>
            <p class="text-muted">Manage your content with Osirion CMS</p>
        </div>
    </div>

    @if (!IsRepositoryConfigured)
    {
        <div class="row mb-4">
            <div class="col">
                <div class="alert alert-info d-flex" role="alert">
                    <i class="bi bi-info-circle-fill fs-5 me-3"></i>
                    <div>
                        <h5 class="alert-heading">Repository Setup Required</h5>
                        <p class="mb-0">Please select a repository and branch to get started with content management.</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row gx-4 gy-4">
        <div class="col-12 col-lg-4">
            <!-- Repository Configuration -->
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex align-items-center">
                    <h5 class="card-title mb-0 fs-6">Repository Configuration</h5>
                </div>
                <div class="card-body p-0">
                    <RepositorySelector />
                    <BranchSelector AllowCreateBranch="true" />
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0 fs-6">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <button @onclick="CreateNewPost" disabled="@(!IsRepositoryConfigured)"
                                class="btn btn-outline-secondary text-start d-flex align-items-center p-3">
                            <div class="d-flex align-items-center justify-content-center me-3 p-2 rounded"
                                 style="background-color: rgba(9, 105, 218, 0.1); color: #0969da;">
                                <i class="bi bi-file-earmark-plus fs-5"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Create New Content</h6>
                                <p class="text-muted small mb-0">Create a new blog post, page or document</p>
                            </div>
                        </button>

                        <a href="/osirion/content"
                           class="btn btn-outline-secondary text-start d-flex align-items-center p-3">
                            <div class="d-flex align-items-center justify-content-center me-3 p-2 rounded"
                                 style="background-color: rgba(45, 164, 78, 0.1); color: #2da44e;">
                                <i class="bi bi-folder fs-5"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Browse Content</h6>
                                <p class="text-muted small mb-0">Browse and manage existing content files</p>
                            </div>
                        </a>

                        <a href="/osirion/settings"
                           class="btn btn-outline-secondary text-start d-flex align-items-center p-3">
                            <div class="d-flex align-items-center justify-content-center me-3 p-2 rounded"
                                 style="background-color: rgba(207, 34, 46, 0.1); color: #cf222e;">
                                <i class="bi bi-gear fs-5"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Settings</h6>
                                <p class="text-muted small mb-0">Configure CMS settings and preferences</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <!-- Content Explorer -->
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 fs-6">Content Explorer</h5>
                    <button class="btn btn-sm btn-primary" @onclick="CreateNewPost" disabled="@(!IsRepositoryConfigured)">
                        <i class="bi bi-plus-lg me-1"></i> New
                    </button>
                </div>
                <div class="card-body p-0" style="height: 500px; max-height: calc(100% - 56px);">
                    <FileExplorer OnCreateFile="CreateNewPost" />
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="card-title mb-3">Need Help?</h5>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="https://docs.osirion.io" target="_blank" class="text-decoration-none text-primary d-flex align-items-center">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            Documentation
                        </a>
                        <a href="https://github.com/obrana-boranija/Osirion.Blazor/issues" target="_blank" class="text-decoration-none text-primary d-flex align-items-center">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            Report Issues
                        </a>
                        <a href="https://github.com/obrana-boranija/Osirion.Blazor" target="_blank" class="text-decoration-none text-primary d-flex align-items-center">
                            <i class="bi bi-github me-2"></i>
                            GitHub Repository
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>