    <None Remove="wwwroot\css\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Osirion.Blazor\Osirion.Blazor.csproj" />
  </ItemGroup>

  <!-- Integrate CSS tree-shaking MSBuild target -->
  <Import Project="..\..\..\build\Osirion.Blazor.targets" Condition="Exists('..\..\..\build\Osirion.Blazor.targets')" />

</Project>
