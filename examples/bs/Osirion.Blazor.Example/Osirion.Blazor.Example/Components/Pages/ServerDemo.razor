@page "/server-demo"
@rendermode InteractiveServer

<PageTitle>Server Interactive Demo</PageTitle>

<h1>Server Interactive Demo</h1>

<p>This page demonstrates Osirion.Blazor components in server interactive mode.</p>

<div class="mt-4">
    <h2>Search Functionality</h2>
    <SearchBox Placeholder="Search content..." />
</div>

<div class="mt-4">
    <h2>Dynamic Content Loading</h2>
    <ContentList Category="@CurrentCategory" />

    <div class="mt-3">
        <button class="btn btn-primary me-2" @onclick="@(() => CurrentCategory = null)">All</button>
        <button class="btn btn-secondary me-2" @onclick="@(() => CurrentCategory = "tutorials")">Tutorials</button>
        <button class="btn btn-secondary" @onclick="@(() => CurrentCategory = "web")">Web</button>
    </div>
</div>

@code {
    private string? CurrentCategory;
}