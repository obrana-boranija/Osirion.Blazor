@namespace Osirion.Blazor.Navigation.Components
@inherits OsirionComponentBase

<div class="osirion-menu-item-wrapper @(HasSubmenu ? "osirion-menu-item-has-submenu" : "") @(IsActive ? "osirion-menu-item-wrapper-active" : "")" @attributes="AdditionalAttributes">
    <a href="@(Disabled ? "#" : Href)"
       role="menuitem"
       class="osirion-menu-item @(IsActive ? "osirion-menu-item-active" : "") @(Disabled ? "osirion-menu-item-disabled" : "") @CssClass"
       @onclick="OnClickHandler"
       @onclick:preventDefault="Disabled">

        @if (IconTemplate is not null)
        {
            <span class="osirion-menu-item-icon">
                @IconTemplate
            </span>
        }
        else if (!string.IsNullOrWhiteSpace(Icon))
        {
            <span class="osirion-menu-item-icon">
                @switch (Icon?.ToLowerInvariant())
                {
                    case "home":
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z" />
                        </svg>
                        break;
                    case "blog":
                    case "document":
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M11 2a3 3 0 0 1 3 3v6a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V5a3 3 0 0 1 3-3zM5 1a4 4 0 0 0-4 4v6a4 4 0 0 0 4 4h6a4 4 0 0 0 4-4V5a4 4 0 0 0-4-4z" />
                        </svg>
                        break;
                    case "docs":
                    case "documentation":
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
