<AuthGuard ShowLoginForm="@ShowLoginForm">
    <AdminLayout 
        Title="@Title"
        Subtitle="@Subtitle"
        Theme="@Theme"
        StatusMessage="@adminState.StatusMessage"
        ErrorMessage="@adminState.ErrorMessage"
        CurrentPage="@CurrentPage"
        BreadcrumbItems="@BreadcrumbItems"
                 OnSignOut="@(EventCallback.Factory.Create(this, HandleSignOut))">

        <HeaderTemplate>
            @HeaderTemplate
        </HeaderTemplate>

        <NavigationTemplate>
            @if (NavigationTemplate != null)
            {
                @NavigationTemplate
            }
        </NavigationTemplate>

        <ActionsTemplate>
            @ActionsTemplate
        </ActionsTemplate>

        <SidebarFooterTemplate>
            @SidebarFooterTemplate
        </SidebarFooterTemplate>

        <ChildContent>
            @ChildContent
        </ChildContent>

    </AdminLayout>
</AuthGuard>