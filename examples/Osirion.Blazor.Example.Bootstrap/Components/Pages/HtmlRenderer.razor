@page "/html"
@using Osirion.Blazor.Components

<PageTitle>HTML Renderer Example</PageTitle>

<div class="container">
    <h1>OsirionHtmlRenderer Examples</h1>

    <div class="example-section">
        <h2>Basic HTML with Code Highlighting</h2>
        <OsirionHtmlRenderer HtmlContent="@basicExample" />
    </div>

    <div class="example-section">
        <h2>Multiple Languages</h2>
        <OsirionHtmlRenderer HtmlContent="@multiLanguageExample" />
    </div>

    <div class="example-section">
        <h2>User Generated Content (Sanitized)</h2>
        <OsirionHtmlRenderer HtmlContent="@userGeneratedContent"
                             SanitizeHtml="true" />
    </div>
</div>

@code {
    private string basicExample = @"
        <h3>Getting Started with Blazor</h3>
        <p>Here's a simple Blazor component:</p>
        <pre><code class=""language-razor"">
@page ""/counter""

&lt;h1&gt;Counter&lt;/h1&gt;

&lt;p&gt;Current count: @currentCount&lt;/p&gt;

&lt;button class=""btn btn-primary"" @onclick=""IncrementCount""&gt;Click me&lt;/button&gt;

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
        </code></pre>
        <p>This component demonstrates basic state management in Blazor.</p>
    ";

    private string multiLanguageExample = @"
        <h3>Working with Multiple Technologies</h3>

        <h4>HTML Structure</h4>
        <pre><code class=""language-html"">
&lt;!DOCTYPE html&gt;
&lt;html lang=""en""&gt;
&lt;head&gt;
    &lt;meta charset=""UTF-8""&gt;
    &lt;title&gt;My Blazor App&lt;/title&gt;
&lt;/head&gt;
&lt;body&gt;
    &lt;div id=""app""&gt;Loading...&lt;/div&gt;
    &lt;script src=""_framework/blazor.webassembly.js""&gt;&lt;/script&gt;
&lt;/body&gt;
&lt;/html&gt;
        </code></pre>

        <h4>CSS Styling</h4>
        <pre><code class=""language-css"">
.blazor-component {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
    padding: 1rem;
    margin-bottom: 1rem;
}

.blazor-component:hover {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}
        </code></pre>

        <h4>JavaScript Interop</h4>
        <pre><code class=""language-javascript"">
window.blazorHelpers = {
    showAlert: function (message) {
        alert(message);
        return true;
    },

    setFocus: function (element) {
        element.focus();
    }
};
        </code></pre>
    ";

    private string userGeneratedContent = @"
        <h3>User Comment</h3>
        <p>This is a great article! Here's my code:</p>
        <pre><code class=""language-csharp"">
// This would be sanitized
Console.WriteLine(""Hello World!"");
        </code></pre>
        <!-- This script tag will be removed by sanitization -->
        <script>alert('XSS attempt');</script>
        <p onclick=""alert('Another XSS')"">This onclick will also be removed.</p>
    ";
}

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .example-section {
        margin-bottom: 3rem;
        padding: 2rem;
        background-color: var(--osirion-background-secondary, #f8f9fa);
        border-radius: var(--osirion-radius-lg, 0.5rem);
    }

    h2 {
        color: var(--osirion-text-primary, #212529);
        margin-bottom: 1.5rem;
    }

    h3 {
        color: var(--osirion-text-secondary, #495057);
        margin-top: 1.5rem;
        margin-bottom: 1rem;
    }

    h4 {
        color: var(--osirion-text-secondary, #6c757d);
        margin-top: 1rem;
        margin-bottom: 0.5rem;
    }
</style>