@namespace Osirion.Blazor.Cms.Components
@inherits OsirionComponentBase

<section class="@GetSectionClass()">
    <div class="osirion-content-section-container">
        @* <OsirionBackgroundPattern BackgroundPattern="BackgroundPatternType.Grid" /> *@
        @if (!string.IsNullOrEmpty(Title))
        {
            <header class="osirion-content-section-header">
                <h2 class="osirion-content-section-title">@Title</h2>
                @if (!string.IsNullOrEmpty(Subtitle))
                {
                    <p class="osirion-content-section-subtitle">@Subtitle</p>
                }
            </header>
        }

        <div class="osirion-content-section-body">
            @if (!string.IsNullOrEmpty(Content))
            {
                <div class="osirion-content-section-content">
                    @((MarkupString)Content)
                </div>
            }

            @if (ChildContent != null)
            {
                <div class="osirion-content-section-children">
                    @ChildContent
                </div>
            }
        </div>

        @if (!string.IsNullOrEmpty(ActionText) && !string.IsNullOrEmpty(ActionUrl))
        {
            <footer class="osirion-content-section-footer">
                <a href="@ActionUrl" class="osirion-content-section-action">
                    @ActionText
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </a>
            </footer>
        }
    </div>
</section>