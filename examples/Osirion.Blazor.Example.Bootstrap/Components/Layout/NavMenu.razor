@using Osirion.Blazor.Cms.Components
@using Osirion.Blazor.Components
@using Osirion.Blazor.Navigation.Components
@inherits OsirionComponentBase

<Menu AriaLabel="Main Navigation" Orientation="MenuOrientation.Horizontal" CollapseOnMobile BrandText="Osirion.Blazor" IsSticky="true">
    <MenuItem Text="Home" Href="/" Icon="home" />
    @foreach (var dir in _directories)
    {
        <MenuItem Text="@dir.Name" Href="@dir.Url" Icon="@dir.Name.ToLower()" />
    }

    <MenuDivider />


    <SearchBox CssClass="p-3"/>
</Menu>