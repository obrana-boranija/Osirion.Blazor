@namespace Osirion.Blazor.Cms.Admin.Components.Editor
@inherits Osirion.Blazor.Components.OsirionComponentBase

<div class="osirion-commit-panel">
    <div class="osirion-commit-header">
        <h3 class="osirion-commit-title">@Title</h3>
    </div>

    <div class="osirion-commit-body">
        <div class="osirion-commit-form-group">
            <label class="osirion-commit-label" for="commitMessage">Commit Message</label>
            <input type="text"
                   class="osirion-commit-input"
                   id="commitMessage"
                   @bind="CommitMessage"
                   placeholder="Enter a descriptive commit message" />
        </div>

        @if (ShowDescription)
        {
            <div class="osirion-commit-form-group">
                <label class="osirion-commit-label" for="commitDescription">Description</label>
                <textarea class="osirion-commit-textarea"
                          id="commitDescription"
                          @bind="CommitDescription"
                          rows="3"
                          placeholder="Enter a detailed commit description (optional)"></textarea>
            </div>
        }

        <div class="osirion-commit-actions">
            <button type="button"
                    class="osirion-commit-button"
                    @onclick="OnCancel">
                Cancel
            </button>

            <button type="button"
                    class="osirion-commit-button osirion-commit-button-primary"
                    @onclick="OnCommit"
                    disabled="@(string.IsNullOrWhiteSpace(CommitMessage) || IsCommitting)">
                @if (IsCommitting)
                {
                    <span class="osirion-commit-loading-spinner"></span>
                    <span>Committing...</span>
                }
                else
                {
                    <span class="osirion-commit-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                            <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                        </svg>
                    </span>
                    <span>@CommitButtonText</span>
                }
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="osirion-commit-footer osirion-commit-error">
            <span>@ErrorMessage</span>
        </div>
    }
</div>