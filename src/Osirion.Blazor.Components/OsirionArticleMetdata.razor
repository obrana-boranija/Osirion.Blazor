@namespace Osirion.Blazor.Components
@inherits OsirionComponentBase

@if (_hasMetadata)
{
    <div class="osirion-article-metadata">
        @if (!string.IsNullOrWhiteSpace(Author))
        {
            <span class="osirion-article-metadata-author">
                <svg class="osirion-article-meta-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                @Author
            </span>
        }

        @if (PublishDate.HasValue)
        {
            <span class="osirion-article-metadata-date">
                <svg class="osirion-article-metadata-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                @FormatPublishDate()
            </span>
        }

        @if (!string.IsNullOrWhiteSpace(ReadTime))
        {
            <span class="osirion-article-metadata-read-time">
                <svg class="osirion-article-metadata-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                @ReadTime min
            </span>
        }
    </div>
}